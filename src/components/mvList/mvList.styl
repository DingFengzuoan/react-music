.mv-list
    .item
        padding: 5px
        border-bottom: 1px solid #dddddd
        display: flex
        align-items: center
        .icon
            width: 30%
            padding-top: 19%
            background-repeat: no-repeat
            background-size: cover
            margin-right: 10px
            position relative
            .play-count
                position: absolute
                top: 4px
                right: 4px
                font-size: 12px
                color: #d0d0d0
                .iconfont
                    font-size: 14px
                    color: #d0d0d0
                    margin-right: 2px
        .content
            flex: 1
            .name
                font-size: 16px
                line-height: 1.2
                margin-bottom: 10px
                word-break: break-all
                overflow hidden
                display: -webkit-box
                -webkit-line-clamp: 2
                color: #333333
            .info
                font-size: 12px
                .duration
                    color: #707070
                .artist-name
                    color: #507daf
