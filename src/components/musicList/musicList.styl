.music-list-wrapper
    position: fixed
    top: 40%
    left 0
    right: 0
    bottom: 0
    background-color #ffffff
    z-index: 101
    .header
        padding: 13px 7px
        display: flex
        align-items: center
        color: #333333
        border-bottom: 1px solid #eee
        .text
            flex: 1
            margin-left: 5px
        .iconfont
            color: #989898
        .line
            border-left: 1px solid #989898
            margin-left: 10px
            height 17px
        .collect
            font-size: 20px
        .clear
            margin-left: 7px
        .collect-text
            margin-left: 5px
    .music-list
        position: absolute
        left 0
        right 0
        bottom: 0
        top: 46px
        overflow hidden
        .item
            display: flex
            padding: 13px 7px
            border-bottom: 1px solid #eee
            align-items: center
            .content
                flex: 1
                overflow hidden
                white-space nowrap
                text-overflow: ellipsis
                line-height: 1.2
                &.active
                    color: #c62f2f
                    .artist-name
                        color: #c62f2f
                    .iconfont
                        color: #c62f2f
                        margin-right: 7px
                        display: inline
                .artist-name
                    font-size: 12px
                    color: #989898
                .iconfont
                    display: none
            .close
                color: #989898
                margin-left: 10px
.music-list-cover
    background-color: rgba(120, 120, 120, 0.6)
    position: fixed
    top: 0
    left: 0
    right: 0
    bottom: 0
    z-index: 100