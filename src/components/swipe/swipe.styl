.carousel-wrapper
    position relative
    .dots
        position: absolute
        bottom: 10px
        text-align: center
        width: 100%
        .dot
            display: inline-block
            width: 8px
            height: 8px
            border-radius: 50%
            background-color: #aaaaaa
            margin: 0 5px
            &.active
                background-color: #c62f2f