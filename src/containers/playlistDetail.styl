.play-list-nav-header
    display: flex
    height 50px
    align-items: center
    padding: 0 15px 0 20px
    position relative
    z-index: 1
    background-color: #c62f2f
    .back
        color: #ffffff
    .content
        flex: 1
        margin-left: 15px
        overflow hidden
        .name
            font-size: 16px
            color: #ffffff
            overflow hidden
            white-space nowrap
            text-overflow: ellipsis
        .info
            font-size: 12px
            margin-top: 3px
            color: #e8e4df
    .search
        font-size: 20px
        color: #ffffff
    .more
        font-size: 20px
        margin-left: 20px
        color: #ffffff
.play-list-detail-wrapper
    position: fixed
    top: 0
    left 0
    right 0
    bottom: 0
    .introduce
        display flex
        padding: 60px 20px 10px
        .cover-img
            width: 114px
            height 114px
            position relative
            img 
                width: 100%
                height 100%
            .count
                position: absolute
                top: 5px
                right 5px
                color: #ffffff
                font-size: 12px
                .iconfont
                    font-size: 12px
                    color: #ffffff
        .content
            flex: 1
            display: flex
            align-items: center
            margin-left: 20px
            flex-wrap: wrap
            .name
                font-size: 17px
                color: #fefefe
                line-height: 1.3
                width: 100%
                display: -webkit-box
                text-overflow: ellipsis
                overflow: hidden
                -webkit-line-clamp: 2
            .author
                display: flex
                align-items: center
                img 
                    width: 30px
                    height 30px
                    border-radius: 50%
                .nickname
                    color: hsla(0, 0%, 100%, .7)
                    margin-left: 5px
                    font-size: 14px
.cover-bg-wrapper
    position: absolute
    top: 0
    left 0
    right 0
    height: 240px
    z-index: -1
    overflow hidden
    .cover-bg
        background-repeat: no-repeat
        background-position: center
        filter: blur(20px)
        transform: scale(1.5)
        width: 100%
        height 100%
.operation-wrapper
    display: flex
    text-align: center
    padding: 10px 0
    .item
        flex: 1
        font-size: 13px
        color: rgba(255,255,255,0.7)
        .text
            display: block
            margin-top: 5px
        .iconfont
            font-size: 18px
.play-operation
    display: flex
    align-items: center
    height: 50px
    justify-content: space-between
    padding: 0 20px
    border-bottom: 1px solid #ddd
    .left
        display: flex
        align-items: center
        .play
            font-size: 20px
            color: #333333
            margin-right: 10px
        .count
            font-size: 15px
            color: #b1b1b1
    .right
        display: flex
        align-items: center
        font-size: 14px
        color: #333333
        .more
            color: #525252
            margin-right: 5px